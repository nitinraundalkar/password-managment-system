<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Password Managment System</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
              >Password Category</a
            >
            <ul class="dropdown-menu">
              <li>
                <a href="/add-new-category" class="dropdown-itom"
                  >Add New Category
                </a>
              </li>
              <li>
                <a href="/password-category" class="dropdown-itom"
                  >View All Category</a
                >
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
              >Password Details</a
            >
            <ul class="dropdown-menu">
              <li>
                <a href="/add-new-password" class="dropdown-itom"
                  >Add New Password</a
                >
              </li>
              <li>
                <a href="/view-all-password" class="dropdown-itom"
                  >View All Password</a
                >
              </li>
            </ul>
          </li>
          <li><a href="/logout">logout</a></li>
        </ul>
        <div class="navbar-header" style="float: right;">
          <a class="navbar-brand" href="#"
            >LoggedIn As: <% if(userToken){%> <%= userToken %> <% } %></a
          >
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <h1>Password Categoty List</h1>

        <br />
        <table class="table table-striped table-primary">
          <head>
            <tr>
              <th>Password Category Name</th>
              <th>Action</th>
            </tr>
          </head>
          <tbody>
            <% if(records.length > 0){ records.forEach(function(row){ %>
            <tr>
              <td><%= row.category_name %></td>
              <td>
                <a
                  class="btn btn-primary btn-xs"
                  href="/password-category/edit/<%= row._id %>"
                  ><i class="fa fa-edit"></i
                ></a>
                <a
                  class="btn btn-danger btn-xs"
                  href="/password-category/delete/<%= row._id %>"
                  ><i class="fa fa-trash"></i
                ></a>
              </td>
            </tr>
            <% }) }%>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
